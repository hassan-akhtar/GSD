<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llDrawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLetter"
            android:layout_width="42dp"
            android:layout_height="42dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llContactInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/llDrawable"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvOrgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="My Company"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/darkGrey" />

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="15dp"
                android:layout_marginLeft="10dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_orgs"/>
            <TextView
                android:id="@+id/tvSubCompaniesCount"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="75" />
        </LinearLayout>

    </LinearLayout>

