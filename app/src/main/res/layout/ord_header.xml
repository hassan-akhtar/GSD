<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llbg"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/org_one"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivOrg"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/white_organization"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivOrg"
                android:layout_centerHorizontal="true"
                android:text="Organizations"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/llMale"
                android:paddingTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivMale"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="7dp"
                    android:src="@drawable/icon_male" />

                <TextView
                    android:id="@+id/tvMaleCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivOrg"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="12dp"
                    android:text="50"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFemale"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingTop="7dp"
                android:layout_alignParentBottom="true"
               android:layout_alignParentRight="true"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivFemale"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="7dp"
                    android:src="@drawable/icon_female" />

                <TextView
                    android:id="@+id/tvFemaleCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivOrg"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="12dp"
                    android:text="30"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llLocal"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingTop="7dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivLocal"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="7dp"
                    android:src="@drawable/icon_local" />

                <TextView
                    android:id="@+id/tvLocalCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivOrg"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="12dp"
                    android:text="30"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
